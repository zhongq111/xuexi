.container {
  padding: 20rpx;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.rectangle {
  width: calc(100% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  padding: 20rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.content {
  width: 45ch;
  word-break: break-all;
  font-size: 25rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-wrap: break-word;
  
}
.avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-left: 10px;
}

.title text {
  margin-left: 10px;
}