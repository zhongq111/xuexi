.container {
  padding: 20rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.content {
  font-size: 28rpx;
  word-break: break-all;
}
.divider {
  width: 100%;
  height: 1px;
  background-color: rgb(0, 0, 0);
  margin: 10px 0;
}
/* 容器样式 */
.container1 {
  position: relative;
  min-height: 100vh;
}

/* 评论显示区域样式 */
.comments {
  width: 40ch;
  word-break: break-all;
  padding: 20rpx;
  height: calc(100vh - 160rpx); /* 减去底部按钮及外边距的高度 */
  overflow-y: auto;
}
/* 底部按钮样式 */
.bottom-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  z-index: 1;
}

/* 弹出层样式 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 100%;
}

.popup-content textarea {
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx;
}

.popup-content button {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.comment-divider {
  height: 1rpx;
  background-color: #ccc;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.reply-divider {
  border-bottom: 1px dashed #ccc; /* 灰色虚线 */
  margin: 8px 0; /* 上下边距 */
  width: 100%; /* 修改为合适的宽度 */
}
.char-count {
  position: absolute;
  bottom: 370px;
  right: 10px;
  color: rgb(185, 176, 176);
  font-size: 12px;
}
.toggle-reply {
  color: #007aff;
  font-size: 25rpx;
  margin-top: 10rpx;
  cursor: pointer;
}
.comment-avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 5px;
  vertical-align: middle;
}

.comment-nickname {
  font-weight: bold;
  margin-right: 5px;
  vertical-align: middle;
}

.reply-nickname {
  font-weight: bold;
  margin-right: 5px;
}