.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 让容器内元素左对齐 */
}

.info-item {
  display: flex;
  align-items: center;
  width: 100%; /* 让每个信息项占满容器宽度 */
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
}

.info-item text:first-child {
  width: 150rpx; /* 为标签预留一定宽度 */
  font-size: 28rpx;
}

.info-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
}

.edit-item {
  display: flex;
  align-items: center;
  width: 100%; /* 让每个编辑项占满容器宽度 */
  margin-bottom: 20rpx;
}

.edit-item text:first-child {
  width: 150rpx; /* 为标签预留一定宽度 */
  font-size: 28rpx;
}

.edit-item input {
  flex: 1; /* 输入框自动填充剩余宽度 */
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
}

.edit-item button {
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-left: 150rpx; /* 与标签对齐 */
}

.edit-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.button-container{
  position: fixed;
  bottom:200rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  justify-content: center;
}